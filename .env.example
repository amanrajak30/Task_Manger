# Task Manager Environment Variables Example
# Copy this file to .env and update the values as needed
# Note: All variables must start with REACT_APP_ to be accessible in React

# App Configuration
REACT_APP_NAME=Task Manager
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=production
REACT_APP_DESCRIPTION=A modern task management application

# API Configuration (for future backend integration)
REACT_APP_API_URL=https://your-api-domain.com/api
REACT_APP_API_TIMEOUT=10000

# Feature Flags
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DRAG_DROP=true
REACT_APP_ENABLE_FILTERS=true

# Storage Configuration
REACT_APP_STORAGE_KEY=task-manager-tasks
REACT_APP_MAX_TASKS=1000
REACT_APP_AUTO_SAVE=true

# UI Configuration
REACT_APP_THEME=light
REACT_APP_DEFAULT_PRIORITY=Medium
REACT_APP_ITEMS_PER_PAGE=50

# External Services (add your actual keys)
REACT_APP_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
REACT_APP_SENTRY_DSN=https://your-sentry-dsn
REACT_APP_FIREBASE_API_KEY=your-firebase-api-key

# Development Settings
REACT_APP_MOCK_DATA=false
REACT_APP_LOG_LEVEL=error